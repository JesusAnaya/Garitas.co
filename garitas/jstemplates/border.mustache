            </div>
            <div class="wait bg-overlay">
                <p>{{port.vehicle_ready_lane.hours}}:{{port.vehicle_ready_lane.mins}}<span>{{port.vehicle_ready_lane.time_text}}<span></p>
            </div>
        </div>

        <!-- People Standard -->
        <div class="lane-box">
