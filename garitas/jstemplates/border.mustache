            </div>
            <div class="wait bg-overlay">
                <p>{{port.vehicle_sentri_lane.hours}}:{{port.vehicle_sentri_lane.mins}}<span>{{port.vehicle_sentri_lane.time_text}}<span></p>
            </div>
        </div>

        <!-- Vehicle readylane -->
