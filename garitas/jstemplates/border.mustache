                <h2>standard</h2>
                <div class="person"></div>
            </div>
            <div class="wait bg-overlay last-lane">
                <p>{{port.pedestrian_standard_lanes.hours}}:{{port.pedestrian_standard_lanes.mins}}<span>{{port.pedestrian_standard_lanes.time_text}}<span></p>
            </div>
